{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ng-autosize": {
      "projectType": "library",
      "root": "projects/ng-autosize",
      "sourceRoot": "projects/ng-autosize/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ng-autosize/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ng-autosize/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ng-autosize/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/ng-autosize/tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "main": "projects/ng-autosize/src/test.ts",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/ng-autosize/**/*.ts",
              "projects/ng-autosize/**/*.html"
            ]
          }
        }
      }
    }
  }
}
